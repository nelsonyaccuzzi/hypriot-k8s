vrrp_instance VI_1 {
    state MASTER
    interface {{ network.interface }}
    virtual_router_id 101
    priority {{ 100 - groups['all'].index(inventory_hostname) }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    virtual_ipaddress {
        {{ master_ip_address }}
    }
}
